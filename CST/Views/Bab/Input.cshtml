@model CST.ViewModels.Rumusan.RumusVM;
@{
    ViewData["Title"] = "Data Bab";
}

<div class="modal fade" id="babModal" tabindex="-1" role="dialog" aria-labelledby="babModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="babModalLabel">Tambah Bab</h4>
            </div>
            <div class="modal-body">
                <form autocomplete="off"> 
                    <div class="form-row">
                        <input type="hidden" id="boxBabId" />
                        <div class="col-md-8 mb-3">
                            <label for="boxNama">Nama Bab</label>
                            <input type="text" class="form-control" id="boxNama" placeholder="Nama Bab" required>
                        </div>                     
                         <div class="form-group col-md-8 mb-3">  
                            <label>Pilih Nasabah</label>
                                <select required="required" class="form-control" style="width: 100%;" id="nasabahId">

                                  @foreach (var item in Model.M_Nasabah)
                                   {
                                        <option value="@item.Id">@item.Nama</option>
                                   }
                             </select>                  
                       </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal" onclick="ClearScreen();">Close</button>
                <button type="button" class="btn btn-sm btn-primary" id="btnAddBab" onclick="AddBab();"><span class="spinner-border spinner-border-sm spinnerButtonProccess" role="status"></span> Simpan</button>
                <button type="button" class="btn btn-sm btn-primary" id`="btnUpdateBab" onclick="UpdateBab();"><span class="spinner-border spinner-border-sm spinnerButtonProccess" role="status"></span> Perbarui</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="detailModal" tabindex="-1" role="dialog" aria-labelledby="detailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="detailModalLabel">Detail Data</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-7">
                        <table>
                            <tr>
                                <td>Nama Bab</td>
                                <td> : </td>
                                <td id="tdbabNama"></td>
                            </tr>
                        </table>
                    </div>
                </div>                               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>                
            </div>
        </div>
    </div>
</div>

<section class="pcoded-main-container">
    <div class="pcoded-wrapper">
        <div class="pcoded-content">
            <div class="pcoded-inner-content">
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- [ Main Content ] start -->
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Master / Bab</h5>
                                        <button class="btn btn-sm btn-light fa-pull-right" data-toggle="modal" data-target="#babModal" onclick="ClearScreen()" data-backdrop="static" data-keyboard="false" title="Add Data">Add Bab</button>
                                    </div>
                                    <div class="card-block">
                                        <div class="table-responsive">
                                            <table id="babTable" class="display table-sm nowrap table-striped table-hover" style="width:100%">
                                                <thead>
                                                    <tr class="table-light">
                                                        <th>No</th>
                                                        <th>Nama Bab</th>
                                                        <th>Nasabah</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- [ Main Content ] end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Styles{
    <link rel="stylesheet" href="~/vendor/jazztemplate/plugins/data-tables/css/datatables.min.css">
    <link href="~/vendor/jazztemplate/plugins/select2/css/select2.min.css" rel="stylesheet" />

    <!-- modal-window-effects css -->
    <link rel="stylesheet" href="~/vendor/jazztemplate/plugins/modal-window-effects/css/md-modal.css">  
}


@section Scripts{
    <script src="~/vendor/jazztemplate/plugins/data-tables/js/datatables.min.js"></script>    
    <script src="~/vendor/moment-js/moment-with-locales-IDN.min.js"></script>    

    <!-- modal-window-effects Js -->
    <script src="~/vendor/jazztemplate/plugins/modal-window-effects/js/classie.js"></script>
    <script src="~/vendor/jazztemplate/plugins/modal-window-effects/js/modalEffects.js"></script>
    <script>
        $(document).ready(function () {
            $('.spinnerButtonProccess').hide();
            LoadTable();
            //LoadTableHistory();
        })

        function LoadTable() {
            var t = $("#babTable").DataTable({                
                "ajax": function (data, callback, settings) {
                    $.ajax({
                        "url": "@Url.Action("Data","Bab")/Input",
                        "type": "GET",
                        "datatype": "json",
                        "data" : data,
                        "beforeSend": function () {
                            materialLoading(true);
                        }
                    }).then(
                        (data) => {
                            callback(data);
                            materialLoading(false);                            
                        },
                        (XMLHttpRequest, textStatus, errorThrown) => {
                            materialLoading(false);
                        });
                        
                },
                
                "columns": [
                    { "data": null },
                    { "data": "nama" },
                    { "data": "nasabah.nama"},
                    {
                        "render": function (data, type, row) {
                            console.log(row);
                            let buttonEdit = '<button type="button" class="btn btn-sm btn-light" onclick="ShowData('+row.id+')"><span><i class="fas fa-edit"></i> Edit</span></button>';
                            let buttonDetail = '<button type="button" class="btn btn-sm btn-light" onclick="DetailData('+row.id+')"><span><i class="fas fa-info-circle"></i> Detail</span></button>';
                            let buttonDelete = '<button type="button" class="btn btn-sm btn-light" onclick="DeleteData('+row.id+')"><span><i class="fas fa-trash-alt""></i> Delete</span></button>';
                            
                            return buttonDetail + buttonEdit + buttonDelete; 
                        }
                    }
                ],
                "columnDefs": [
                    {
                        "targets": [0,2],
                        "className": "text-center",
                    }
                ]
            })
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        }

        function ShowData(id) {
            let babData = $('#babTable').DataTable().data();
            $.each(babData, function (index, value) {
                if (value.id == parseInt(id)) {
                    debugger;
                    $("#boxBabId").val(value.id);
                    $("#boxNama").val(value.nama);
                    $('#btnAddBab').hide();
                    $('#btnUpdateBab').show();
                    $('#babModal').modal('show');
                    return false;
                }
            })
        }        

        function DetailData(id)
        {
            let babData = $('#babTable').DataTable().data();
            $.each(babData, function (index, value) {
                if (value.id == parseInt(id)) {
                    $("#tdbabNama").html(value.nama);
                    $('#detailModal').modal('show');
                    return false;
                }
            })
        }

        function AddBab() {
            if($('#boxNama').val()==''){
                swal({
                    text: "Nama Bab harus diisi!",
                    icon: "warning"                    
                });
            }
            else
            {
                var fileData = new FormData();
                fileData.append('Nama',$("#boxNama").val());
                fileData.append('NasabahId',$("#nasabahId").val());
                $.ajax({
                    "url": "@Url.Action("Input","Bab")",
                    "type": "POST",
                    "datatype": "json",
                    "processData": false,
                    "contentType": false,
                    "beforeSend": function () {
                        ProcessingRequest();
                    },
                    "data": fileData, 
                    "enctype": 'multipart/form-data',
                }).then(
                    (result) => {
                    
                        if (result.statusCategory == 2) {
                            swal({
                                text: result.message,
                                icon: "success",
                                buttons: false,
                                timer: 1500
                            }).then(() => {
                                $("#babModal").modal('hide');
                                ClearScreen();
                                $('#babTable').DataTable().ajax.reload();
                            })
                        }
                        else {
                            swal({
                                text: result.message,
                                icon: "error",                            
                            }).then(() => {
                                $("#babModal").modal('hide');
                                ClearScreen();
                                $('#babTable').DataTable().ajax.reload();
                            })
                        }
                        RequestDone();
                    },
                    (XMLHttpRequest, textStatus, errorThrown) => {
                        alert("Error : " + textStatus);
                        RequestDone();
                    }
                );
            }
        }

        function UpdateBab() {
            
            let isPassedCheck = false;
            if($('#boxNama').val()==''){
                swal({
                    text: "Nama Bab harus diisi!",
                    icon: "warning"                    
                });
                isPassedCheck = false;
            }     
            else
            {
                isPassedCheck = true;                
            }
            

            if(isPassedCheck==true)
            {
                debugger;
                console.log($("#boxBabId").val());
                console.log($("#boxNama").val());

                var fileData = new FormData();
                fileData.append('Id',$("#boxBabId").val());
                fileData.append('Nama',$("#boxNama").val());
                fileData.append('NasabahId',$("#nasabahId").val());

                $.ajax({
                    "url": "@Url.Action("Update","Bab")",
                    "type": "PUT",
                    "datatype": "json",
                    "processData": false,
                    "contentType": false,
                    "beforeSend": function () {
                        ProcessingRequest();
                    },
                    "data": fileData, 
                    "enctype": 'multipart/form-data',                
                }).then(
                    (result) => {
                        if (result.statusCategory == 2) {
                            swal({
                                text: result.message,
                                icon: "success",
                                buttons: false,
                                timer: 1500
                            }).then(() => {
                                $("#babModal").modal('hide');
                                ClearScreen();
                                $('#babTable').DataTable().ajax.reload();
                            })
                        }
                        else {
                            swal({
                                text: result.message,
                                icon: "error",                            
                            }).then(() => {
                                $("#babModal").modal('hide');
                                ClearScreen();
                                $('#babTable').DataTable().ajax.reload();
                            })
                        }
                        RequestDone();
                    },
                    (XMLHttpRequest, textStatus, errorThrown) => {
                        alert("Error : " + textStatus);
                        RequestDone();
                    });
            }
        }

        function DeleteData(Id) {
            swal({
                title: "Hapus Data",
                text: "Apakah anda yakin akan menghapus data ini?",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            }).then((result) => {
                if (result) {
                    $.ajax({
                        "url": "@Url.Action("Delete","Bab")",
                        "type": "DELETE",
                        "datatype": "json",
                        "beforeSend": function () {
                            ProcessingRequest();
                        },
                        "data": { dataId: Id }
                    }).then(
                        (result) => {
                            //console.log(result);
                            if (result.statusCategory == 2) {
                                swal({
                                    text: result.message,
                                    icon: "success",
                                    buttons: false,
                                    timer: 1500
                                }).then(() => {
                                    $('#babTable').DataTable().ajax.reload();
                                })
                            }
                            else {
                                swal({
                                    text: result.message,
                                    icon: "error",
                                    buttons: true
                                }).then(() => {
                                    $('#babTable').DataTable().ajax.reload();
                                })
                            }
                            RequestDone();
                        },
                        (XMLHttpRequest, textStatus, errorThrown) => {
                            alert("Error : " + textStatus);
                            RequestDone();
                        }
                    )
                }
            })
        }

        function ProcessingRequest() {
            $('.spinnerButtonProccess').show();
            $(':input').prop('disabled', true);
        }
        function RequestDone() {
            $('.spinnerButtonProccess').hide();
            $(':input').prop('disabled', false);
        }

        function ClearScreen() {
            $("#boxNama").val("");
            $('#btnAddBab').show();
            $('#btnUpdateBab').hide();
        }
    </script>
}
